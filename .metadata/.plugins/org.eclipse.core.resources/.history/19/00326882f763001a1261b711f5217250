
public class ExercicioDois {
	
	public static void main(String[] args) {
		
		boolean dias = possoIrBanco("segunda-feira",9);
		
		
		System.out.println("O banco está aberto:"+ " " + dias);
		
		
	}
	
	public static boolean possoIrBanco(String dias, int horario) {
		
		
		if(dias != "domingo" && dias != "sábado" && horario >= 10 && horario <= 18) {
			
			return true;
		}
		
		else {
			
			return false;
		}
		
		
	}

}
